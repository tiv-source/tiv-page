<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>

  <field name="vacancy.beginning">
    <field-validator type="required" short-circuit="true">
      <message key="vacancy.beginning.validation.required" />
    </field-validator>
  </field>

  <field name="vacancy.workingTime">
    <field-validator type="requiredstring" short-circuit="true">
      <message key="vacancy.workingTime.validation.required" />
    </field-validator>
  </field>

  <field name="vacancy.descriptionMap.DE.name">
    <field-validator type="requiredstring" short-circuit="true">
      <message key="vacancy.descriptionMap.DE.name.validation.required" />
    </field-validator>
  </field>

  <field name="vacancy.descriptionMap.DE.description">
    <field-validator type="requiredstring" short-circuit="true">
      <message key="vacancy.descriptionMap.DE.description.validation.required" />
    </field-validator>
  </field>

  <field name="vacancy.descriptionMap.DE.keywords">
    <field-validator type="requiredstring" short-circuit="true">
      <message key="vacancy.descriptionMap.DE.keywords.validation.required" />
    </field-validator>
  </field>

  <field name="vacancy.contentMap.DE.content">
    <field-validator type="requiredstring" short-circuit="true">
      <message key="vacancy.contentMap.DE.content.validation.required" />
    </field-validator>
  </field>

  
</validators>