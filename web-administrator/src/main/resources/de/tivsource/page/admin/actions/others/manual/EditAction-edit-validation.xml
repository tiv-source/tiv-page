<validators>

  <field name="manual.technical">
    <field-validator type="requiredstring">
      <message key="manual.technical.validation.required" />
    </field-validator>
    <field-validator type="regex">
      <param name="regex"><![CDATA[ [a-z,0-9]{4,49} ]]></param>
      <message key="manual.technical.validation.character" />
    </field-validator>
  </field>

  <field name="manual.descriptionMap.DE.name">
    <field-validator type="fieldexpression" short-circuit="true">
      <param name="expression">
        <![CDATA[
           ((
             lang.equals("EN")
           ) 
           ||
           (
             lang.equals("DE") &&
             manual.descriptionMap.DE.name!=null &&
             manual.descriptionMap.DE.name.trim()!="" &&
             manual.descriptionMap.DE.name.trim().length()>3
           ))
        ]]>
      </param>
      <message key="manual.descriptionMap.DE.name.validation.required" />
    </field-validator>
  </field>

